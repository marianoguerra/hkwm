VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:    libxlib.dummy

libxlib.dummy: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< --lib --out-dir .
	touch $@

xlib-test: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

.PHONY: check
check: xlib-test
	./xlib-test $(TEST)

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test
